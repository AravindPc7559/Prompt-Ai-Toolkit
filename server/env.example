# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Specify the OpenAI model to use (default: gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini

# Server Port (default: 3000)
# PORT=3000

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/prompt-rewriter
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/prompt-rewriter
MONGODB_URI=mongodb://localhost:27017/prompt-rewriter

# JWT Configuration
# IMPORTANT: Change this to a strong random secret in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Token expiration (default: 30d) - examples: 1h, 7d, 30d, 1y
JWT_EXPIRES_IN=30d

# Server URLs
# API_URL=http://localhost:3000
# CLIENT_URL=http://localhost:5173

# Razorpay Configuration
# Get these from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
